[Unit]
Description=Nightsight Service
After=multi-user.target
Conflicts=getty@tty1.service

[Service]
Type=simple
ExecStart=/bin/sh -c "/usr/bin/python3 /home/pi/Repositories/Raspberry-Pi/main.py > /home/pi/Repositories/Raspberry-Pi/print_and_error_log.txt 2>&1" 2>&1'
StandardInput=tty-force

[Install]
WantedBy=multi-user.target
